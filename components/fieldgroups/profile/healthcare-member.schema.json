  "$id": "https://ns.adobe.com/xdm/mixins/healthcare-member",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Member Details",
  "type": "object",
  "meta:extensible": true,
  "meta:abstract": true,
  "meta:tags": {
    "industry": ["healthcare_services"]
  },
  "meta:intendedToExtend": ["https://ns.adobe.com/xdm/context/profile"],
  "description": "Details of a person who may be waiting for a care or may be receiving care or may have already received care.",
  "definitions": {
    "member-details": {
      "properties": {
        "xdm:member": {
          "Title": "Member",
          "description": "Information about the member.",
          "type": "object",
          "properties": {
            "xdm:ID": {
              "Title": "Member ID",
              "type": "string",
              "description": "Unique Identifier of the patient/member."
            },
            "xdm:name": {
              "Title": "Member Name",
              "description": "Member's full name.",
              "$ref": "https://ns.adobe.com/xdm/context/person-name"
            },
            "xdm:addressDetails": {
              "Title": "Address Details",
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "xdm:addressType": {
                    "Title": "Type of the address indication if the address is home, mailing, or work.",
                    "type": "string",
                    "description": "Member's full name.",
                    "enum": ["Home", "Work", "Mailing", "Other"],
                    "meta:enum": {
                      "Home": "Home Address",
                      "Work": "Work Address",
                      "Mailing": "Mailing Address",
                      "Other": "Other Address"
                    }
                  },
                  "xdm:address": {
                    "Title": "Member Address",
                    "$ref": "https://ns.adobe.com/xdm/common/address"
                  },
                  "xdm:effectiveStartDate": {
                    "Title": "Effective Start Date",
                    "type": "string",
                    "format": "date-time",
                    "description": "Effective start date of the member's address."
                  },
                  "xdm:efectiveEndDate": {
                    "Title": "Effective End Date",
                    "type": "string",
                    "format": "date-time",
                    "description": "Effective end date of the member's address."
                  }
                },
                "xdm:phoneNumber": {
                  "Title": "Phone Number",
                  "description": "Member's phone number.",
                  "$ref": "https://ns.adobe.com/xdm/context/phonenumber"
                }
              }
            },
            "xdm:birthDate": {
              "title": "Birth date(YYYY-MM-DD)",
              "type": "string",
              "format": "date",
              "description": "Date of birth of the patient/member."
            },
            "xdm:gender": {
              "title": "Gender",
              "type": "string",
              "enum": ["male", "female", "not_specified", "non_specific"],
              "meta:enum": {
                "male": "Male",
                "female": "Female",
                "not_specified": "Not Specified",
                "non_specific": "Non-specific"
              },
              "description": "Gender of the patient/member.",
              "default": "not_specified"
            },
            "xdm:maritalStatus": {
              "title": "Marital Status",
              "type": "string",
              "enum": [
                "married",
                "single",
                "divorced",
                "widowed",
                "not_specified"
              ],
              "meta:enum": {
                "married": "Married",
                "single": "Single",
                "divorced": "Divorced",
                "widowed": "Widowed",
                "not_specified": "Not Specified"
              },
              "description": "Describes a person's relationship with a significant other.",
              "default": "not_specified"
            },
            "xdm:nationality": {
              "title": "Nationality",
              "type": "string",
              "pattern": "^[A-Z]{2}$",
              "description": "The legal relationship between a patient/member and their state represented using the ISO 3166-1 Alpha-2 code."
            },
            "xdm:dateAgeCollected": {
              "Title": "Date Age Collected",
              "type": "string",
              "format": "date-time",
              "description": "The date the patient age was collected."
            },
            "xdm:multipleBirth": {
              "type": "object",
              "properties": {
                "xdm:isMultipleBirth ": {
                  "Title": "Is Multiple Birth",
                  "type": "boolean",
                  "description": "Boolean flag to indicate if the member had a multiple birth."
                },
                "xdm:multipleBirthNumber": {
                  "Title": "Multiple Birth Number",
                  "type": "integer",
                  "description": "Number of babies born if multiple birth is true."
                }
              }
            },
            "xdm:emailAddress": {
              "Title": "Email Address",
              "$ref": "https://ns.adobe.com/xdm/context/emailaddress"
            },
            "xdm:organization": {
              "Title": "Organization",
              "$ref": "https://ns.adobe.com/xdm/datatypes/b2b-account-organization"
            },
            "xdm:primaryCarePhysicians": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "xdm:providerID ": {
                    "Title": "Provider ID",
                    "type": "string",
                    "description": "Unique identifier of the physician."
                  },
                  "xdm:fullName": {
                    "Title": "Full Name",
                    "type": "string",
                    "description": "Primary Care Physician full name."
                  },
                  "xdm:startDate": {
                    "Title": "Start Date",
                    "type": "string",
                    "format": "date-time",
                    "description": "Date on which the PCP began care for the member."
                  },
                  "xdm:endDate": {
                    "Title": "End Date",
                    "type": "string",
                    "format": "date-time",
                    "description": "Date on which the PCP ended care for the member."
                  }
                }
              }
            },
            "xdm:emergencyContact": {
              "Title": "Emergency Contact",
              "description": "Emergency contact details.",
              "type": "object",
              "properties": {
                "xdm:fullName": {
                  "Title": "Full Name",
                  "type": "string",
                  "description": "Full name of the emergency contact."
                },
                "xdm:phone": {
                  "Title": "Phone Number",
                  "type": "string",
                  "description": "Phone number of the emergency contact."
                }
              }
            },
            "xdm:preferredAvaiability": {
              "Title": "Preferred Availability",
              "type": "string",
              "description": "Patient prefered day and time availability for an appointment."
            },
            "xdm:medications": {
              "Title": "Medications",
              "description": "Medication information including ID, start date, and active flag.",
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "xdm:ID": {
                    "Title": "Medication ID",
                    "type": "string",
                    "description": "Unique identifier for the medication."
                  },
                  "xdm:startDate": {
                    "Title": "Medication Start Date",
                    "type": "string",
                    "format": "date-time",
                    "description": "Date on which the patient began taking the medication."
                  },
                  "xdm:isCurrent": {
                    "Title": "Is Current",
                    "type": "boolean",
                    "description": "Indicates whether the medication is current or past."
                  }
                }
              }
            },
            "xdm:isDependent": {
              "Title": "Is Dependent",
              "type": "boolean",
              "description": "Indicates whether this member is a dependent."
            },
            "xdm:primaryMemberID": {
              "Title": "Primary Member ID",
              "type": "string",
              "description": "Unique Identifier of the primary subscriber if the member is dependent."
            },
            "xdm:beneficiaryRelationship": {
              "Title": "Beneficiary Relationship",
              "type": "string",
              "description": "Beneficiary relationship to the subscriber if the member is a dependent (self, spouse, child, etc)."
            },
            "xdm:billingAccountID": {
              "Title": "Billing Account ID",
              "type": "string",
              "description": "Unique Identifier of the billing account."
            },
            "xdm:specialists": {
              "Title": "Specialist",
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "xdm:name": {
                    "Title": "Name",
                    "type": "string",
                    "description": "Full name of the specialist provider."
                  },
                  "xdm:specialty": {
                    "Title": "Specialty",
                    "type": "string",
                    "description": "Specialty of the provider (anesthesiology, urology, radiology, dermatology, etc)."
                  },
                  "xdm:providerID": {
                    "Title": "Provider ID",
                    "type": "string",
                    "description": "Unique identifier of the specialist."
                  }
                }
              }
            },
            "xdm:isLead": {
              "Title": "Is Lead",
              "type": "boolean",
              "description": "Boolean flag indicates if this member is a lead."
            },
            "xdm:isOpportunity": {
              "Title": "Is Opportunity",
              "type": "boolean",
              "description": "Boolean flag indicates if this this member is a opportunity."
            },
            "xdm:plans": {
              "Title": "Member Plan",
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "xdm:ID": {
                    "Title": "ID",
                    "type": "string",
                    "description": "Plan ID unique identifier."
                  },
                  "xdm:coverageType": {
                    "Title": "Coverage Type",
                    "type": "string",
                    "enum": ["Medical", "Dental", "Vision", "Accident"],
                    "meta:enum": {
                      "Medical": "Medical",
                      "Dental": "Dental",
                      "Vision": "Vision",
                      "Accident": "Accident"
                    },
                    "description": "Member plan coverage type."
                  },
                  "xdm:isActive": {
                    "Title": "Is Active",
                    "type": "boolean",
                    "description": "Boolean flag indicates whether the plan is active."
                  },
                  "xdm:network": {
                    "Title": "Network",
                    "type": "string",
                    "description": "The insurer-specific identifier for the insurer-defined network of providers to which the beneficiary may seek treatment which will be covered at the 'in-network' rate, otherwise 'out of network' term."
                  },
                  "xdm:coverageStartDate": {
                    "Title": "Coverage Start Date",
                    "type": "string",
                    "format": "date-time",
                    "description": "Coverage start date."
                  },
                  "xdm:coverageEndDate": {
                    "Title": "Coverage End Date",
                    "type": "string",
                    "format": "date-time",
                    "description": "Coverage end date."
                  },
                  "xdm:planType": {
                    "Title": "Plan Type",
                    "type": "string",
                    "enum": ["primary", "secondary", "tertiary"],
                    "meta:enum": {
                      "primary": "primary",
                      "secondary": "secondary",
                      "tertiary": "tertiary"
                    },
                    "description": "This indicates if the plan is primary,secondary or tertiary plan."
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/member-details"
    },
    {
      "$ref": "https://ns.adobe.com/xdm/common/external-source-system-audit-details"
    }
  ],
  "meta:status": "experimental",
  "meta:createdDate": "2022-05-18"
}
